<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.mapper.AttachMapper">
	<!-- 첨부파일 삽입/삭제/수정 -->
	
	<insert id="insert"> <!-- 컬럼 전체 삽입 -->
		insert into spring_attach(uuid, uploadPath, fileName, fileType, bno) values(#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{bno})	
	</insert>
	
	<delete id="delete">	<!-- uuid 값 일치 -->
		delete from spring_attach where uuid=#{uuid}	
	</delete>
	
	
	<select id="select" resultType="com.spring.domain.AttachFileDTO">	<!-- bno값 일치 -->
		select * from spring_attach where bno=#{bno}
	</select>
	
	
	<delete id="deleteAll">
			delete from spring_attach where bno=#{bno}
	</delete>
	
	

</mapper>